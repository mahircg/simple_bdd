# Location for all files produced for compiling and linking
build_dir = 'build'

# call the SConscript file located in the same directory
# the following arguments are passed in the call
# - variant_dir=build_dir: directory where bluid files should be located
# - duplicate=0: do not copy the source files (*.cpp) in the variant directory
SConscript('SConscript', variant_dir=build_dir, duplicate=0)
